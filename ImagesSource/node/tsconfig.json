{
  "compilerOptions": {
    "esModuleInterop": true,
    "strict": true,
    "skipDefaultLibCheck": true,
    "target": "es5",
    "inlineSourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "types": [
      "reflect-metadata"
    ],
    "lib": ["es2018", "es2018.promise"],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}